<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingBottom="100dp"
    tools:context=".ui.capture.fragment.CaptureFragment">

    <Button
        android:id="@+id/btn_camera_preview"
        style="@style/ButtonStyle"
        android:text="@string/button_text_camera_preview" />

    <Button
        android:id="@+id/btn_camera_preview_custom"
        style="@style/ButtonStyle"
        android:text="@string/button_text_camera_preview_custom" />

    <Button
        android:id="@+id/btn_camera_preview_with_effect"
        style="@style/ButtonStyle"
        android:text="@string/button_text_camera_preview_with_effects" />

    <Button
        android:id="@+id/btn_picture_taking"
        style="@style/ButtonStyle"
        android:text="@string/button_text_picture_taking" />

    <Button
        android:id="@+id/btn_video_recording"
        style="@style/ButtonStyle"
        android:text="@string/button_text_video_recording" />

</LinearLayout>