<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="commonConfirmDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="CoverView">
        <attr name="cover_radius" format="dimension" />
        <attr name="cover_leftTopRadius" format="dimension" />
        <attr name="cover_rightTopRadius" format="dimension" />
        <attr name="cover_leftBottomRadius" format="dimension" />
        <attr name="cover_rightBottomRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowFrameLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>

    <style name="font_sf_compact_rounded_black">
        <item name="android:fontFamily">@font/sf_compact_rounded_black</item>
    </style>

    <style name="font_sf_compact_rounded_medium">
        <item name="android:fontFamily">@font/sf_compact_rounded_medium</item>
    </style>

    <style name="font_sf_compact_rounded_bold">
        <item name="android:fontFamily">@font/sf_compact_rounded_bold</item>
    </style>

    <style name="font_sf_sf_pro_text_black_italic">
        <item name="android:fontFamily">@font/sf_pro_text_black_italic</item>
    </style>

    <style name="font_sf_compact_rounded_heavy">
        <item name="android:fontFamily">@font/sf_compact_rounded_heavy</item>
    </style>

    <style name="font_sf_compact_rounded_regular">
        <item name="android:fontFamily">@font/sf_compact_rounded_regular</item>
    </style>

</resources>