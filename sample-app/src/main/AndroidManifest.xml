<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Glvideo">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- capture section -->
        <activity
            android:name=".ui.capture.activity.CameraPreviewActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.capture.activity.CameraPreviewCustomActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.capture.activity.CameraPreviewEffectsActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.capture.activity.PictureTakingActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.capture.activity.VideoRecordingActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- video section -->
        <activity
            android:name=".ui.video.activity.VideoDecodeActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.video.activity.GifToMp4Activity"
            android:exported="false"
            android:launchMode="singleTop" />

    </application>

</manifest>